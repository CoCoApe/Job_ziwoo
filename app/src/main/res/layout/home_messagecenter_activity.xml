<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <Button
            android:id="@+id/allmessage_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/message_all"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x16"
            android:background="@color/messagecenterbuttonbg"/>
        <Button
            android:id="@+id/unreadmessage_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/message_unRead"
            android:textSize="@dimen/x16"
            android:background="@android:color/white"/>
    </LinearLayout>
    <cn.com.zhiwoo.view.main.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </cn.com.zhiwoo.view.main.NoScrollViewPager>
</LinearLayout>