<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/x20"
    android:orientation="vertical"
    android:background="@null">

    <TextView
        android:id="@+id/time_textveiw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/x3"
        android:paddingRight="@dimen/x3"
        android:background="@drawable/home_order_timeview_bg_shape"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:orientation="vertical"
        android:background="@drawable/home_order_item_bg_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingRight="@dimen/x20"
                android:gravity="end"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black"
                android:text="@string/order_tutor" />

            <TextView
                android:id="@+id/tour_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black"
                android:text="@string/fuente" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingRight="@dimen/x20"
                android:gravity="end"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black"
                android:text="@string/order_user" />

            <TextView
                android:id="@+id/user_textviw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingRight="@dimen/x20"
                android:gravity="end"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black"
                android:text="@string/order_time" />

            <TextView
                android:id="@+id/reservationtime_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingRight="@dimen/x20"
                android:gravity="end"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black"
                android:text="@string/order_desc" />

            <TextView
                android:id="@+id/desc_textviw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black"
                android:text="@string/order_no" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
