<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/x20"
    android:background="#eeeeee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88888888"/>
        <RelativeLayout
            android:id="@+id/icon_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:paddingRight="@dimen/x10">
            <TextView
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="头像"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black"
                android:gravity="center"/>
            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@drawable/jiantou"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon_imageview"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/x70"
                android:layout_marginRight="@dimen/x25"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:src="@drawable/default_user_icon"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x20"
            android:background="#88888888"/>
        <RelativeLayout
            android:id="@+id/nickname_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:paddingRight="@dimen/x10">
            <TextView
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black"
                android:text="@string/nickName"
                android:gravity="center"/>
            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@drawable/jiantou"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/nickname_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x25"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x20"
            android:background="#88888888"/>
        <RelativeLayout
            android:id="@+id/sex_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:paddingRight="@dimen/x10">
            <TextView
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black"
                android:text="@string/sex"
                android:gravity="center"/>
            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@drawable/jiantou"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/sex_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="@string/noSex"
                android:layout_marginRight="@dimen/x25"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88888888"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88888888"/>
        <RelativeLayout
            android:id="@+id/phone_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:paddingRight="@dimen/x10">
            <TextView
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/phone"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black"
                android:gravity="center"/>
            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@drawable/jiantou"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/phone_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="@string/noPhone"
                android:layout_marginRight="@dimen/x25"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x20"
            android:background="#88888888"/>
        <RelativeLayout
            android:id="@+id/city_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:paddingRight="@dimen/x10">
            <TextView
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/city"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black"
                android:gravity="center"/>
            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@drawable/jiantou"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/city_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x25"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x20"
            android:background="#88888888"/>
        <RelativeLayout
            android:id="@+id/password_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:paddingRight="@dimen/x10">
            <TextView
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/passWord2"
                android:textSize="@dimen/x16"
                android:textColor="@android:color/black"
                android:gravity="center"/>
            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@drawable/jiantou"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/password_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="@string/passWord"
                android:layout_marginRight="@dimen/x25"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88888888"/>
    </LinearLayout>
</LinearLayout>