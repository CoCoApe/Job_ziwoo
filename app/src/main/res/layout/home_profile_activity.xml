<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:paddingTop="@dimen/x20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88888888" />

        <RelativeLayout
            android:id="@+id/icon_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:paddingRight="@dimen/x10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:gravity="center"
                android:text="头像"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x16" />

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/jiantou" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon_imageview"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/x70"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x25"
                android:scaleType="centerCrop"
                android:src="@drawable/default_user_icon" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x20"
            android:background="#88888888" />

        <RelativeLayout
            android:id="@+id/nickname_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:paddingRight="@dimen/x10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:gravity="center"
                android:text="@string/nickName"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x16" />

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/jiantou" />

            <TextView
                android:id="@+id/nickname_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x25"
                android:gravity="center" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x20"
            android:background="#88888888" />

        <RelativeLayout
            android:id="@+id/sex_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:paddingRight="@dimen/x10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:gravity="center"
                android:text="@string/sex"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x16" />

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/jiantou" />

            <TextView
                android:id="@+id/sex_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x25"
                android:gravity="center"
                android:text="@string/noSex" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88888888" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        android:background="@android:color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88888888" />

        <RelativeLayout
            android:id="@+id/phone_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:paddingRight="@dimen/x10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:gravity="center"
                android:text="@string/phone"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x16" />

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/jiantou" />

            <TextView
                android:id="@+id/phone_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x25"
                android:gravity="center"
                android:text="@string/noPhone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x20"
            android:background="#88888888" />

        <RelativeLayout
            android:id="@+id/city_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:paddingRight="@dimen/x10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:gravity="center"
                android:text="@string/city"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x16" />

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/jiantou" />

            <TextView
                android:id="@+id/city_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x25"
                android:gravity="center" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x20"
            android:background="#88888888" />

        <RelativeLayout
            android:id="@+id/password_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:paddingRight="@dimen/x10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:gravity="center"
                android:text="@string/passWord2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x16" />

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/jiantou" />

            <TextView
                android:id="@+id/password_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x25"
                android:gravity="center"
                android:text="@string/passWord" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88888888" />
    </LinearLayout>
</LinearLayout>
