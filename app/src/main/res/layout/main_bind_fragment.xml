<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:orientation="vertical">
        <!--android:background="@drawable/login_login_textfield_bg"-->

        <EditText
            android:id="@+id/main_bind_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="@drawable/input_rect"
            android:hint="@string/hintPhone"
            android:inputType="phone"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="@drawable/input_rect"
            android:layout_marginTop="@dimen/x15"
            android:padding="0dp">

            <EditText
                android:id="@+id/main_bind_authCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="@dimen/x15"
                android:hint="@string/hintAuthCode"
                android:inputType="textPassword"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/main_bind_getAuthCode"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x25"
                android:layout_margin="@dimen/x10"
                android:layout_gravity="end|center_vertical"
                android:text="@string/getAuthCode"
                android:background="@drawable/main_login_button_bg_shape"
                android:textColor="@color/white"
                android:textSize="@dimen/x10" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/main_bind_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x80"
        android:background="@drawable/main_login_button_bg_shape"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:textSize="@dimen/x17" />
</LinearLayout>
