<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/login_login_textfield_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/main_bind_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/hintPhone"
            android:inputType="phone"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/main_bind_authCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/hintAuthCode"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/x15"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/main_bind_getAuthCode"
                android:layout_width="@dimen/x100"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x5"
                android:text="@string/getAuthCode"
                android:textColor="@color/globalBgColor"
                android:textSize="@dimen/x12" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/main_bind_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/main_login_button_bg_shape"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:textSize="@dimen/x17" />
</LinearLayout>
