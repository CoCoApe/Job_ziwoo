<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
        <LinearLayout
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:background="@drawable/login_login_textfield_bg">
            <EditText
                android:id="@+id/main_bind_phone"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:inputType="phone"
                android:textColor="@android:color/white"
                android:hint="@string/hintPhone"
                android:background="@null"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/main_bind_authCode"
                    android:paddingLeft="@dimen/x15"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:hint="@string/hintAuthCode"
                    android:inputType="textPassword"
                    android:background="@null"/>
                <Button
                    android:id="@+id/main_bind_getAuthCode"
                    android:layout_width="@dimen/x100"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/x12"
                    android:layout_marginRight="@dimen/x5"
                    android:textColor="@color/globalBgColor"
                    android:text="@string/getAuthCode"/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/main_bind_next"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x44"
            android:layout_marginTop="@dimen/x30"
            android:text="下一步"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x17"
            android:background="@drawable/main_login_button_bg_shape"/>
</LinearLayout>