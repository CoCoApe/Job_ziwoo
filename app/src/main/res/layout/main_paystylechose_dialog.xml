<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x280"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginTop="@dimen/x15"
        android:gravity="center"
        android:text="@string/chose_channel"
        android:textColor="#000000"
        android:textSize="@dimen/x20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#88222222" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginBottom="@dimen/x5"
        android:layout_marginTop="@dimen/x10">

        <ImageView
            android:id="@+id/wxpay_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x10"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/weixinpay_logo" />

        <ImageView
            android:id="@+id/alipay_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x10"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/alipay_logo" />
    </LinearLayout>
</LinearLayout>
