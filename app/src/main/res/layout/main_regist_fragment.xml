<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x130"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:orientation="vertical"
            android:background="@drawable/login_rgister_textfield_bg">

            <EditText
                android:id="@+id/phone_edittext"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15"
                android:background="@null"
                android:inputType="phone"
                android:textColor="@android:color/white"
                android:hint="@string/hintPhone" />

            <EditText
                android:id="@+id/password_edittext"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15"
                android:background="@null"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:hint="@string/hintCode" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/aouthcode_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:background="@null"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:hint="@string/hintAuthCode" />

                <TextView
                    android:id="@+id/getcode_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/x5"
                    android:textColor="@android:color/white"
                    android:text="@string/getAuthCode" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/x10">

            <Button
                android:id="@+id/agree_button"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginRight="@dimen/x3"
                android:background="@drawable/main_login_protocol_selector"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/agree" />

            <TextView
                android:id="@+id/userprotocol_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/holo_orange_dark"
                android:text="@string/user_protocol" />
        </LinearLayout>

        <Button
            android:id="@+id/regist_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x44"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x30"
            android:background="@drawable/main_login_button_bg_shape"
            android:textSize="@dimen/x17"
            android:textColor="@android:color/white"
            android:text="@string/register" />
    </LinearLayout>
</RelativeLayout>
