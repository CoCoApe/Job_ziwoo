<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/afterPay"/>
    <TextView
        android:layout_marginTop="@dimen/x30"
        android:layout_marginBottom="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/obligate"
        android:textSize="@dimen/x30"
        android:textColor="@color/globalBgColor"
        android:textAlignment="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/globalBgColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/name"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/x16"
            android:gravity="center"/>
        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="#73a7a3"
            android:layout_marginTop="@dimen/x3"
            android:layout_marginBottom="@dimen/x3"/>
        <EditText
            android:id="@+id/name_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@null"
            android:hint="@string/input_name"
            android:textSize="@dimen/x15"
            android:textAlignment="center"
            android:inputType="textCapCharacters"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#73a7a3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/contact"
            android:textSize="@dimen/x16"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"/>
        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="@color/globalBgColor"
            android:layout_marginTop="@dimen/x3"
            android:layout_marginBottom="@dimen/x3"/>
        <EditText
            android:id="@+id/phone_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@null"
            android:hint="@string/input_contact"
            android:textSize="@dimen/x15"
            android:textAlignment="center"
            android:inputType="phone"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/globalBgColor"/>

    <Button
        android:id="@+id/buy_button"
        android:layout_marginTop="@dimen/x100"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        android:background="@color/globalBgColor"
        android:text="@string/buy_lesson"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:textColor="@android:color/white"
        android:textSize="@dimen/x18"/>
</LinearLayout>