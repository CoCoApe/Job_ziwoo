<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/react_webview_progressbar_layerlist"
        />
    <WebView
        android:id="@+id/desc_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </WebView>
    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44">
        <Button
            android:id="@+id/customer_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/globalBgColor"
            android:text="@string/custom_service"
            android:textSize="@dimen/x16"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/buy_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@android:color/holo_orange_dark"
            android:text="@string/buy_immediately"
            android:textSize="@dimen/x16"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>